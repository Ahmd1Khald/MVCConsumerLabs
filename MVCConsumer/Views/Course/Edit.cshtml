@model MVCConsumer.DTO.CourseDTO
@{
    ViewBag.Title = Model.Id == 0 ? "Create Course" : "Edit Course";
    var instructors = ViewBag.Instructors as List<MVCConsumer.Models.Instructor>;
}

<h2>@ViewBag.Title</h2>

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">

    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Name">Course Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="InstID">Instructor</label>
        <select asp-for="InstID" class="form-control">
            @foreach (var inst in instructors)
            {
                <option value="@inst.Id" selected="@(Model.InstID == inst.Id)">
                    @inst.Name
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
